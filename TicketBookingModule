void main() {
	int choice = 0, login = 1;
	//'login' is an identifier to determine if the customer has logged in as a member or not
	//'login' = 0 means havent log in, 1 means logged in
	bookingMain();
	rewind(stdin);
	scanf("%d", &choice);

	switch (choice) {
	case 1: 
		if (login == 1) {
			bookTicket();

		};
		break;
	case 2:
	}

}

